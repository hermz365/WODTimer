<UserControl
    x:Class="HermzApp.WODTimer.Windows81.Controls.TextBlockWithLabel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid>
        <StackPanel Orientation="Vertical" Margin="15 0 15 25">
            <TextBlock Name="HeaderLabel" TextAlignment="Center" FontSize="{ThemeResource ComboBoxArrowThemeFontSize}"/>
            <TextBlock Name="NumText" TextAlignment="Center" FontSize="{StaticResource TextBlockWithLabelNumFontSize}"/>
        </StackPanel>
    </Grid>
</UserControl>
